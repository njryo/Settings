{
    "files.eol": "\n",
    "files.autoGuessEncoding": true,
    "editor.formatOnPaste": true,
    "editor.suggestSelection": "first",
    "editor.detectIndentation": false,

    "window.zoomLevel": 0,
    "editor.fontSize": 13,
    "editor.fontFamily": "'Source Han Code JP','Source Han Sans HW', 'Gen Shin Gothic Monospace', Consolas, 'Courier New', monospace",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "One Dark Pro",

    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "vsicons.dontShowNewVersionMessage": true,

    // terminal setting
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\cmd.exe",
    "terminal.integrated.fontSize": 13,

    // todo tree
    "todo-tree.tree.showScanModeButton": false,

    //  TODO Highlight
    //
    // "todohighlight.isEnable": true,
    // // py以下を追加
    // "todohighlight.include": [
    //     "**/*.js",
    //     "**/*.jsx",
    //     "**/*.ts",
    //     "**/*.tsx",
    //     "**/*.html",
    //     "**/*.php",
    //     "**/*.css",
    //     "**/*.scss",
    //     "**/*.py",
    //     "**/*.scala",
    //     "**/*.java",
    //     "**/*.tex"
    // ],

    // markdown
    "[markdown]": {
        "editor.renderWhitespace": "boundary",
        "files.trimTrailingWhitespace": false
    },

    // html
    "[html]": {
        "editor.suggest.insertMode": "replace",
        "editor.tabSize": 2,
        "editor.renderIndentGuides": true,
        "files.trimTrailingWhitespace": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "liveServer.settings.donotShowInfoMsg": true,

    // css
    "[css]": {
        "editor.suggest.insertMode": "replace",
        "editor.tabSize": 2,
        "editor.renderIndentGuides": true,
        "files.trimTrailingWhitespace": true
    },

    // javascript
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.renderIndentGuides": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // vue
    "[vue]": {
        "editor.tabSize": 2
    },

    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "vue"
    ],

    // python
    "[python]": {
        "editor.tabSize": 4,
        "editor.renderIndentGuides": true,
        "editor.insertSpaces": true,
        "files.trimTrailingWhitespace": true
    },

    "python.pythonPath": "path",
    // "python.venvPath": "path",

    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": [
        "--disable=missing-docstring, fixme, invalid-name, too-few-public-methods"
    ],
    "python.linting.pylintUseMinimalCheckers": false,

    "python.linting.mypyEnabled": true,

    // flake8 setting
    // "python.linting.pylintEnabled": false,
    // "python.linting.flake8Enabled": true,
    // "python.linting.flake8Args": [
    //     "--ignore=E265, E402, W391"
    // ],

    "python.formatting.provider": "autopep8",

    "python.jediEnabled": false,
    "python.autoComplete.addBrackets": true,
    "python.analysis.memory.keepLibraryAst": true,
    "python.analysis.memory.keepLibraryLocalVariables": true,

    "autoDocstring.docstringFormat": "google",

    // Java
    "java.configuration.checkProjectSettingsExclusions": false,
    "[java]": {
        "editor.tabSize": 2,
        "editor.renderIndentGuides": true,
        "files.trimTrailingWhitespace": true
    },

    // Scala
    "[scala]": {
        "editor.tabSize": 2,
        "editor.renderIndentGuides": true,
        "files.trimTrailingWhitespace": true
    },

    // latex
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.bibtex-format.sortby": [
        "key",
        "[\"AUTHOR\", \"TITLE\"]"
    ],
    "latex-workshop.bibtex-format.case": "UPPERCASE",
}
